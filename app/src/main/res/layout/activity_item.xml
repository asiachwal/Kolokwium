<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.student.kolokwium.Item">




    <TextView
        android:id="@+id/lekarze_imie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_wybierz"
        android:layout_marginStart="30dp"

        android:gravity="center"
        android:text="Jan Kowalski"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lekarze_nazwisko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/lekarze_imie"
        android:text="dermatolog"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <Button

        android:id="@+id/button_wybierz"
        android:layout_width="324dp"
        android:layout_height="40dp"


        android:layout_alignStart="@+id/lekarze_imie"
        android:layout_below="@+id/lekarze_nazwisko"
        android:layout_gravity="center"
        android:layout_marginTop="77dp"
        android:background="@color/colorPrimaryDark"
        android:text="Wybierz"
        android:textColor="@android:color/white" />

</RelativeLayout>